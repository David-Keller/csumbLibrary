<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dak.csumblibrary.MainScreen">

    <Button
        android:text="Create Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:id="@+id/createAccount"
        android:layout_alignEnd="@+id/manageSystem"
        android:layout_alignStart="@+id/manageSystem" />

    <Button
        android:text="Place Hold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/placeHold"
        android:layout_below="@+id/createAccount"
        android:layout_alignEnd="@+id/manageSystem"
        android:layout_alignStart="@+id/createAccount" />

    <Button
        android:text="Cancel Hold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancelHold"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/placeHold"
        android:layout_alignEnd="@+id/placeHold"
        android:layout_alignStart="@+id/placeHold" />

    <Button
        android:text="Manage System"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/manageSystem"
        android:layout_below="@+id/cancelHold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <Button
        android:text="Clear DataBase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/manageSystem"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:id="@+id/clearDB" />
</RelativeLayout>
